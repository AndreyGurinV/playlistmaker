<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".SettingsActivity"
    android:orientation="vertical"
    android:padding="@dimen/margins">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/back"
            android:layout_width="@dimen/image_width"
            android:layout_height="@dimen/image_height"
            android:src="@drawable/back_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:text="@string/title_settings"
            android:textColor="@color/button_text"
            android:textSize="@dimen/title_font_size"
            android:paddingLeft="32dp"
            />
    </Toolbar>

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:layout_width="match_parent"
        android:layout_height="@dimen/setttings_menu_items_height"
        android:text="@string/dark_theme"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/setttings_menu_items_height"
        android:gravity="center_vertical"
        android:text="@string/share"
        android:textColor="@color/button_text"
        android:textSize="@dimen/setttings_menu_items_font_size"
        android:drawableEnd="@drawable/share_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/setttings_menu_items_height"
        android:gravity="center_vertical"
        android:text="@string/support"
        android:textColor="@color/button_text"
        android:textSize="@dimen/setttings_menu_items_font_size"
        android:drawableEnd="@drawable/support_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/setttings_menu_items_height"
        android:gravity="center_vertical"
        android:text="@string/agreement"
        android:textColor="@color/button_text"
        android:textSize="@dimen/setttings_menu_items_font_size"
        android:drawableEnd="@drawable/agreement_icon"/>

</LinearLayout>