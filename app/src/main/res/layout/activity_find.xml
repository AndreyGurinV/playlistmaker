<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top"
    tools:context=".ui.tracks.FindActivity"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/tbBackFromFind"
        style="@style/ToolBarStyle"
        android:title="@string/title_find"
        >
    </Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margins"
        >
        <EditText
            android:id="@+id/etFind"
            style="@style/EditTextStyle"
            android:paddingHorizontal="@dimen/find_edit_text_h_padding"
            android:hint="@string/title_find"
            android:maxLength="50"
            android:maxLines="1"
            android:inputType="text"
            android:cursorVisible="true"
            android:imeOptions="actionDone"
            android:singleLine="true"/>
        <ImageView
            android:id="@+id/findIcon"
            style="@style/FindIconStyle"
            android:paddingStart="@dimen/find_images_padding_12"
            android:layout_gravity="start"
            android:background="@android:color/transparent"
            />

        <ImageView
            android:id="@+id/ivClear"
            style="@style/ClearIconStyle"
            android:layout_gravity="end"
            android:paddingEnd="@dimen/find_images_padding_12"
            android:background="@android:color/transparent"
            android:visibility="gone"
            />
    </FrameLayout>
    <ProgressBar android:id="@+id/pbSearch"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center"
        android:indeterminateTint="@color/yp_blue"
        android:visibility="gone"/>
    <ImageView
        android:id="@+id/ivPlaceholderNothing"
        style="@style/PlaceholderNothingIconStyle"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:padding="@dimen/margins"
        android:visibility="gone"
        />
    <ImageView
        android:id="@+id/ivPlaceholderError"
        style="@style/PlaceholderErrorIconStyle"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:padding="@dimen/margins"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/tvPlaceholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:paddingTop="@dimen/margins"
        android:text="@string/something_went_wrong"
        android:textColor="?attr/colorPrimary"
        style="@style/PlaceholderErrorTextStyle"
        android:paddingBottom="@dimen/margins_24"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/btnUpdateSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:iconTint="@color/button_text"
        android:text="@string/button_update"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tvSearchHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:paddingTop="@dimen/margins"
        android:text="@string/search_history"
        android:textColor="?attr/colorPrimary"
        style="@style/PlaceholderErrorTextStyle"
        android:textFontWeight="500"
        android:paddingBottom="@dimen/margins_24"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_weight="1"
        android:ellipsize="end"
        />

    <Button
        android:id="@+id/btnClearSearchHistory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:iconTint="@color/button_text"
        android:fontFamily="@font/ys_display_medium"
        android:textFontWeight="500"
        android:textSize="@dimen/button_font_size_14"
        android:text="@string/button_clear_search_history"
        />

</LinearLayout>

