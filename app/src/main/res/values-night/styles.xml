<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolBarStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:titleTextColor">@color/white</item>
        <item name="android:navigationIcon">@drawable/dark_mode_back_icon</item>
    </style>
    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">@dimen/margins</item>
        <item name="android:layout_marginEnd">@dimen/margins</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/corners</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">@dimen/icon_padding</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/title_font_size</item>
        <item name="android:textColor">@color/button_text</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="SettingsActivityIcons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/setttings_menu_items_font_size</item>
        <item name="android:padding">@dimen/margins</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>
    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">@dimen/setttings_menu_items_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/back_night</item>
        <item name="android:textColorHint">@color/back_night</item>
        <item name="android:background">@drawable/rounded_edittext</item>
    </style>
    <style name="FindIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/dark_mode_find_icon2</item>
    </style>
    <style name="ClearIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:src">@drawable/dark_mode_clear_icon2</item>
    </style>
    <style name="TrackNameTextStyle">
        <item name="android:textSize">@dimen/setttings_menu_items_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TrackInfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/track_info_font_size</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PlaceholderNothingIconStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:src">@drawable/nothing_find_icon_dark</item>
    </style>
    <style name="PlaceholderErrorIconStyle">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:src">@drawable/error_find_icon_dark</item>
    </style>
    <style name="PlaceholderErrorTextStyle">
        <item name="android:textSize">@dimen/error_font_size_19</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>


